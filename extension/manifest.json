{
  "manifest_version": 3,
  "name": "V-Try.app - AI Virtual Try-On",
  "version": "2.0.0",
  "description": "AI-powered virtual try-on with user authentication, feed management, and video generation",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity",
    "windows"
  ],
  
  "host_permissions": [
    "https://api.kie.ai/*",
    "https://api.v-try.app/*",
    "https://v-try.app/*",
    "https://vtry-app-backend-production.up.railway.app/*",
    "http://localhost:3001/*",
    "http://localhost:3000/*"
  ],
  
  "action": {
    "default_popup": "popup-minimal.html",
    "default_title": "V-Try.app"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/constants.js",
        "shared/types.js",
        "services/auth.js",
        "services/ai.js",
        "services/feed.js",
        "content-minimal.js"
      ],
      "css": ["content.css"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*", 
        "assets/*",
        "auth-popup.html",
        "feed-panel.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "externally_connectable": {
    "matches": [
      "https://v-try.app/*",
      "https://auth.v-try.app/*",
      "http://localhost:3000/*",
      "http://localhost:3001/*"
    ]
  }
}
