# V-Try.app Environment Variables - Development
# Copy this file to .env and fill in your actual values

# KIE AI Configuration
KIE_AI_API_KEY=your_kie_ai_api_key_here

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=us-east-1

# Database Configuration (automatically set by docker-compose)
DATABASE_URL=postgresql://vtry_user:vtry_password@postgres:5432/vtry_app

# Redis Configuration (automatically set by docker-compose)
REDIS_URL=redis://:vtry_redis_password@redis:6379

# JWT Secret (change in production)
JWT_SECRET=vtry_jwt_secret_development_only

# NextAuth Configuration (for website)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=vtry_nextauth_secret_development_only

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Optional: Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Optional: Email Configuration (for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Stripe Configuration (for payments)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Sentry Configuration (for error tracking)
# SENTRY_DSN=https://your_sentry_dsn_here
